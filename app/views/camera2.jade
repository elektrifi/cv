
#camera-container
    h1 Live Video Stream
    p Please use Google Chrome - other browsers aren't yet ready for HTML5 mediastreaming
    p 
    div
      video#live(width='320', height='240', autoplay='autoplay')
        canvas#canvas(width='320', height='240')
    p
    p Remember to enable mediastream via chrome://flags

script(type='text/javascript')
      var video = $("#live").get()[0];
      var canvas = $("#canvas");
      var ctx = canvas.get()[0].getContext('2d');
      navigator.webkitGetUserMedia("video",
      function(stream) {
        video.src = webkitURL.createObjectURL(stream);
      },
      function(err) {
        console.log("Unable to get video stream!")
      }
      )
      timer = setInterval(
      function () {
        ctx.drawImage(video, 0, 0, 320, 240);
      }, 250);